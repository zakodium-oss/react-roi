{
  "name": "react-roi",
  "version": "3.1.0",
  "files": [
    "lib-esm",
    "src"
  ],
  "type": "module",
  "exports": {
    ".": "./lib-esm/index.js"
  },
  "scripts": {
    "build": "storybook build",
    "check-types": "tsc --noEmit",
    "clean": "rimraf lib-esm",
    "dev": "storybook dev -p 6006",
    "eslint": "eslint ./ --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "playwright": "npm run playwright-ct -- --project chromium",
    "playwright-ct": "playwright test -c playwright-ct.config.ts",
    "prepack": "npm run tsc",
    "prettier": "prettier --check ./",
    "prettier-write": "prettier --write ./",
    "test": "npm run playwright && npm run eslint && npm run prettier && npm run check-types",
    "test-only": "vitest",
    "tsc": "npm run clean && npm run tsc-esm",
    "tsc-esm": "tsc --project tsconfig.esm.json"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "dependencies": {
    "@react-hook/resize-observer": "^2.0.2",
    "immer": "^11.1.3"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.57.0",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@zakodium/tsconfig": "^1.0.2",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-zakodium": "^19.0.0",
    "image-js": "^1.3.0",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-kbs": "^3.1.0",
    "rimraf": "^6.1.2",
    "storybook": "^10.1.11",
    "typescript": "~5.9.3",
    "uuid": "^13.0.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.16"
  }
}
