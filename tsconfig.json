{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "ES2022",
    "types": ["vite/client", "node"],
    "skipLibCheck": true,
  },
  "include": ["./src", "./tests", "./stories"],
  "exclude": ["node_modules"],
}
