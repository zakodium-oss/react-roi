{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "types": ["vite/client", "node"],
    "skipLibCheck": true
  },
  "include": ["./src", "./tests", "./stories", "./vitest.config.ts"],
  "exclude": ["node_modules"]
}
